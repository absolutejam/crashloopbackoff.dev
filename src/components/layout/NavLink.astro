---
interface Props {
  href: string;
  text: string;
  icon: string;
}

const { href, text, icon } = Astro.props;
---

<li
  class="block group font-medium rounded-lg transition-all duration-200 hover:bg-border"
>
  <a
    href={href}
    class="flex items-center px-3 py-2 gap-x-3 md:gap-x-2 text-gray-700 dark:text-gray-200"
  >
    <i
      data-lucide={icon}
      class="group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-all duration-200"
    ></i>
    {text}
  </a>
</li>
