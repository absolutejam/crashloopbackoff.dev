---
type Note = 'note'

type Props = {
  kind: Note,
}

const { kind = 'note' } = Astro.props
---

<div 
  data-style={kind}
  class="
    rounded-lg border px-6 py-2 text-base mb-6 shadow-xl 

    shadow-gray-400/10 
    dark:shadow-gray-600/10

    data-[style=warn]:border-yellow-200 data-[style=warn]:bg-yellow-200/60 data-[style=warn]:text-orange-700
    data-[style=warn]:dark:border-yellow-800 data-[style=warn]:dark:bg-yellow-500/60 data-[style=warn]:dark:text-orange-200

    data-[style=note]:border-border 
    data-[style=note]:bg-gray-50
    data-[style=note]:dark:bg-gray-900
  ">
  <slot />
</div>


